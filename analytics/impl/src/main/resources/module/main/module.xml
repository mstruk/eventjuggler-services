<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="urn:jboss:module:1.0" name="org.eventjuggler.analytics">
	<resources>
		<resource-root path="analytics-api.jar" />
		<resource-root path="analytics-impl.jar" />
	</resources>

	<exports>
		<exclude-set>
			<path name="org.eventjuggler.analytics.rest.AnalyticsApplication"/>
			<path name="org.eventjuggler.analytics.rest.AnalyticsResource"/>
		</exclude-set>
	</exports>

	<dependencies>
		<module name="javax.api" />
		<module name="javax.servlet.api" />
		<module name="javax.enterprise.api" />
		<module name="javaee.api" />

		<!-- JPA -->
		<module name="javax.persistence.api" />
		<module name="org.jboss.as.jpa" />
		<module name="org.jboss.as.jpa.spi" />
		<module name="org.hibernate" />
		<module name="org.hibernate.validator" />
		<module name="org.javassist" />

		<!-- Subsystem -->
		<module name="org.jboss.staxmapper" />
		<module name="org.jboss.as.controller" />
		<module name="org.jboss.as.server" />
		<module name="org.jboss.modules" />
		<module name="org.jboss.msc" />
		<module name="org.jboss.logging" />
		<module name="org.jboss.vfs" />
		<module name="org.jboss.metadata" />

		<!-- CDI -->
		<module name="org.jboss.as.weld" />
		<module name="org.jboss.weld.api" />
		<module name="org.jboss.weld.core" />
		<module name="org.jboss.weld.spi" />

		<!-- JNDI -->
		<module name="org.jboss.as.naming"/>

		<!-- Base64 -->
		<module name="org.jboss.common-core"/>

		<!-- Transaction -->
		<module name="org.jboss.as.transactions" />

		<!-- Security -->
		<module name="org.picketbox" />
		<module name="org.jboss.as.security" />

		<!-- REST -->
		<module name="org.jboss.as.web" />
		<module name="org.jboss.resteasy.resteasy-jaxrs" services="import" />
		<module name="org.jboss.resteasy.resteasy-jaxb-provider" services="import" />
		<module name="org.jboss.resteasy.resteasy-jackson-provider" services="import" />
		<module name="javax.xml.bind.api" services="import" />

		<!-- Logging -->
		<module name="org.slf4j" />

		<!-- User Agent Parser -->
		<module name="net.sf.uadetector" />
	</dependencies>
</module>

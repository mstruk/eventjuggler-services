<project name="module-repository" basedir="." default="modules">

	<property name="output.dir" value="${jboss.target.dir}" />

	<target name="unzip-jboss" if="jboss.zip">
		<unzip src="${jboss.zip}" dest="target" />
		<chmod perm="755">
			<fileset dir="${jboss.target.dir}/bin">
				<include name="**/*.sh" />
			</fileset>
		</chmod>
	</target>

	<target name="copy-deployments">
		<copy file="${org.eventjuggler.services:ejs-admin:war}" todir="${output.dir}/standalone/deployments" overwrite="true" />
		<copy file="${org.eventjuggler.services:ejs-activities:ear}" todir="${output.dir}/standalone/deployments" overwrite="true" />
		<copy file="${org.eventjuggler.services:ejs-identity:ear}" todir="${output.dir}/standalone/deployments" overwrite="true" />
	</target>

	<target name="all" depends="unzip-jboss, copy-deployments">
	</target>
</project>

<project name="module-repository" basedir=".">

	<target name="install-wildfly">
		<unzip src="${org.wildfly:wildfly-dist:zip}" dest="${project.build.directory}" />
		<chmod perm="755">
			<fileset dir="${wildfly.target.dir}/bin">
				<include name="**/*.sh" />
			</fileset>
		</chmod>
	</target>

    <target name="install-picketlink">
        <get src="${picketlink.as.subsystem.download}" skipexisting="true" dest="${project.build.directory}/picketlink-as-subsystem.zip" />
        <unzip src="${project.build.directory}/picketlink-as-subsystem.zip" dest="${wildfly.target.dir}" />
    </target>

	<target name="copy-deployments">
		<copy file="${org.eventjuggler.services:ejs-admin:war}" tofile="${wildfly.target.dir}/standalone/deployments/ejs-admin.war" overwrite="true" />
		<copy file="${org.eventjuggler.services:ejs-activities:ear}" tofile="${wildfly.target.dir}/standalone/deployments/ejs-activities.ear" overwrite="true" />
		<copy file="${org.eventjuggler.services:ejs-identity:ear}" tofile="${wildfly.target.dir}/standalone/deployments/ejs-identity.ear" overwrite="true" />
	</target>

	<target name="all" depends="install-wildfly, install-picketlink, copy-deployments">
	</target>
</project>

<project name="module-repository" basedir="." default="modules">

	<import file="lib.xml" />

	<property name="output.dir" value="${jboss.target.dir}" />

	<target name="clean">
		<delete dir="${output.dir}" />
	</target>

	<target name="unzip-jboss" if="jboss.zip">
		<unzip src="${jboss.zip}" dest="target" />
		<chmod perm="755">
			<fileset dir="${jboss.target.dir}/bin">
				<include name="**/*.sh" />
			</fileset>
		</chmod>
	</target>

	<target name="copy-files">
		<copy file="src/main/resources/application-roles.properties" todir="${output.dir}/standalone/configuration" overwrite="true" />
		<copy file="src/main/resources/application-users.properties" todir="${output.dir}/standalone/configuration" overwrite="true" />
	</target>

	<target name="copy-deployments">
		<copy file="${org.eventjuggler.services:ejs-admin:war}" tofile="${output.dir}/standalone/deployments/ejs-admin.war" overwrite="true" />
		<copy file="${org.eventjuggler.services:ejs-identity-impl:war}" tofile="${output.dir}/standalone/deployments/ejs-identity.war" overwrite="true" />
	</target>

	<target name="extract-schemas">
		<unzip src="${org.eventjuggler.services:ejs-analytics-impl:jar}" dest="${output.dir}/docs/schema/">
			<patternset>
				<include name="**/*.xsd" />
			</patternset>
			<mapper type="flatten" />
		</unzip>
	</target>

	<target name="modules">
		<module-def name="net.sf.uadetector">
			<maven-resource group="net.sf.uadetector" artifact="uadetector-core" />
			<maven-resource group="net.sf.uadetector" artifact="uadetector-resources" />
		</module-def>

		<module-def name="org.eventjuggler.services.analytics">
			<maven-resource group="org.eventjuggler.services" artifact="ejs-analytics-api" />
			<maven-resource group="org.eventjuggler.services" artifact="ejs-analytics-impl" />
		</module-def>
		
		<echo file="${jboss.target.dir}/modules/layers.conf">layers=ejs</echo>
	</target>

	<target name="all" depends="clean, unzip-jboss, modules, copy-files, copy-deployments, extract-schemas">
	</target>
</project>

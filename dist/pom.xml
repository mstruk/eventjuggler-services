<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eventjuggler.services</groupId>
        <artifactId>ejs-parent</artifactId>
        <version>0.1.0.M2-SNAPSHOT</version>
    </parent>

    <artifactId>ejs-dist</artifactId>
    <name>Dist</name>
    <packaging>pom</packaging>

    <properties>
        <build.target.dir>${project.build.directory}/ejs-${project.version}</build.target.dir>

        <ejs.dist.download.url>http://ejs-download-url</ejs.dist.download.url>
        <ejs.saas.url>https://ejs-saas-url</ejs.saas.url>
    </properties>

    <profiles>
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>release</name>
                    <value>true</value>
                </property>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>org.eventjuggler.services</groupId>
                    <artifactId>ejs-ear</artifactId>
                    <type>ear</type>
                </dependency>
                <dependency>
                    <groupId>org.wildfly</groupId>
                    <artifactId>wildfly-dist</artifactId>
                    <type>zip</type>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>build</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" inheritRefs="false">
                                            <target name="all" />
                                        </ant>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assemble</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>assembly.xml</descriptor>
                                    </descriptors>
                                    <finalName>ejs-${project.version}</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <outputDirectory>target/</outputDirectory>
                                    <workDirectory>target/assembly/work</workDirectory>
                                    <tarLongFileMode>gnu</tarLongFileMode>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>copy-documentation</id>
                                <phase>package</phase>
                                <configuration>
                                    <outputDirectory>target/ejs-doc-${project.version}</outputDirectory>
                                    <resources>          
                                        <resource>
                                            <directory>src/main/resources/doc</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>              
                                </configuration>   
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>         
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
